#
# ~/.bash_aliases
#

alias diff='colordiff'
alias grep='grep --color=auto'
alias ls='ls --color=auto'

alias l='ls -la'
alias ll='ls -lha'
alias lz='ll -S' # Sort by size
alias lt='ll -t' # Sort by date
alias lx='ll -X' # Sort by extension

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -I'

alias cd..='cd ..'
alias :q='exit'
alias :Q='exit'
